{require_otp_vsn, "R16B*|17|18"}.

{deps, [
        {leo_commons,    ".*", {git, "https://github.com/leo-project/leo_commons.git",    {tag, "1.1.6"}}},
        {leo_backend_db, ".*", {git, "https://github.com/leo-project/leo_backend_db.git", {tag, "1.2.0"}}},
        {leo_logger,     ".*", {git, "https://github.com/leo-project/leo_logger.git",     {tag, "1.2.2"}}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warnings_as_errors,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all,
            {platform_define, "^[0-9]+", namespaced_types}
           ]}.
{sub_dirs, [
            "rel"
           ]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
