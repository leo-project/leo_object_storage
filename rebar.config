{require_otp_vsn, "19|20|21"}.

{deps, [
        {leo_backend_db,  ".*", {git, "https://github.com/leo-project/leo_backend_db.git", {tag, "1.2.31"}}},
        {leo_logger,      ".*", {git, "https://github.com/leo-project/leo_logger.git",     {tag, "1.3.8"}}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all,
            {platform_define, "^[0-9]+", namespaced_types}
           ]}.
{sub_dirs, [
            "rel"
           ]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
