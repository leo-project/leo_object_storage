{require_otp_vsn, "R14B04|R15B02|R15B03"}.

{deps, [
    {leo_commons,    ".*", {git, "https://github.com/leo-project/leo_commons.git",    "0.12.7"}},
    {leo_backend_db, ".*", {git, "https://github.com/leo-project/leo_backend_db.git", "0.12.3"}},
    {proper,         ".*", {git, "https://github.com/manopapad/proper.git",           {branch, "master" }}}
]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
